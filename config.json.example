{
  "hotfolders": [
    "/path/to/hotfolders/IN"
  ],

  "schedule": {
    "scan_interval": 10,
    "resting_time": 300,
    "retention_cleanup_time": 1440
  },

  "retention": {
    "keep_copy": false,
    "ignore_updates": false
  },

  "structure": {
    "dissolve_folders": false
  },

  "metadata": {
    "metadata": false,
    "metadata_field": ""
  },

  "logging": {
    "log_retention": 7
  },

  "auto_cleanup": {
    "ds_store": true,
    "thumbs_db": true,
    "retention": false
  },

  "mtime": {
    "update_mtime": false
  },

  "debugging": {
    "debug": false
  }
} 